{
    "compilerOptions": {
      "target": "es2015",
      "module": "es2015",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react",
      "outDir": "artifacts",
      "rootDir": "src",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "preserveConstEnums": true,
      "allowJs": true,
      "sourceMap": true,
      "noImplicitReturns": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "skipLibCheck": true
    },
    "filesGlob": [
      "typings/index.d.ts",
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "include": [
      "src",
      "typedefs"
    ],
    "exclude": [
      "android/*",
      "ios/*",
      "build/*",
      "node_modules/*",
      "artifacts/*",
      "**/__tests__/*",
      "**/__mocks__/*"
    ],
    "compileOnSave": false
  }